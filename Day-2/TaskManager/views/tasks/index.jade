extends ..\layout
block content
	h1 Task Manager
	hr
	form(method="post")
		span Task :
		input(type="text", name="taskName")
		input(type="submit", value="Add Task")
	ul
		each task in list
			if task.isCompleted
				li(task-id=task.id,class="completed")=task.name
			else
				li(task-id=task.id)=task.name